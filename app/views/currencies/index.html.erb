<h1>Listing currencies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Symbol</th>
    <th>Value in eur</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @currencies.each do |currency| %>
  <tr>
    <td><%= currency.name %></td>
    <td><%= currency.symbol %></td>
    <td><%= currency.value_in_eur %></td>
    <td><%= link_to 'Show', currency %></td>
    <td><%= link_to 'Edit', edit_currency_path(currency) %></td>
    <td><%= link_to 'Destroy', currency, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

