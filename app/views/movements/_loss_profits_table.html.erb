<h3><%= title %></h3>
<table id="<%=title%>_table" class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Movement type</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% movements.group_by(&:mtype).each do |movement| %>
      <tr>
        <td><%= movement[0].name %></td>
        <td><%= movement[1].sum(&:amount).to_s %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Total</th>
      <th><%= total %></th>
    </tr>
  </tfoot>
</table>
