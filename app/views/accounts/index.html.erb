<h1>Listing accounts</h1>

<div class="col-md-9 col-md-offset-1">
  <br>
  <%= link_to 'New Account', new_account_path, :class=>"btn btn-primary btn-sm" %>
  <br>
  <br>

  <%= render :partial => 'list', :locals => {:accounts => @accounts} %>

  <br>
  <% if @accounts_disabled.length > 0 %>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
            <h3>Disabled accounts</h3>
          </a>
        </div>
        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
          <div class="panel-body">
            <%= render :partial => 'list', :locals => {:accounts => @accounts_disabled} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
