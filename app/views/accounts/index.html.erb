<div class="d-flex justify-content-between align-items-baseline">
  <h1>Accounts</h1>
  <%= link_to "New account", new_account_path, class: 'btn btn-primary' %>
</div>


<%= render partial: 'list', locals: {accounts: @accounts} %>

<% if @accounts_disabled.length > 0 %>
<div class="accordion pt-5" id="accounts_disabled">
  <div class="accordion-item">
    <h1 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
        Disabled accounts
      </button>
    </h1>
    <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accounts_disabled">
      <%= render partial: 'list', locals: {accounts: @accounts_disabled} %>
    </div>
  </div>
</div>
<% end %>
