<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Currency</th>
    <th>Description</th>
    <th>Value init</th>
    <th>Value last</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= Currency.find(account.currency_id).name %> </td>
    <td><%= account.description %></td>
    <td><%= account.value_init %><%= account.currency.symbol %></td>
    <td><%= account.value_last %><%= account.currency.symbol %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

