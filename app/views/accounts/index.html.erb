<h1>Listing accounts</h1>

<div class="col-md-7 col-md-offset-2">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Amount</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= account.name %></td>
          <td>
            <button type="button" class="btn btn-default btn-xs glyphicon glyphicon-comment" data-toggle="tooltip" data-placement="right" title="<%= account.description %>" />
          </td>
          <td><%= print_amount(account.amount,account.currency) %></td>
          <td><%= draw_button('show', account) %>
              <%= draw_button('create', new_movement_path(:account_id => account)) unless account.is_disabled %>
              <%= draw_button('edit', edit_account_path(account)) %>
              <%= draw_button('destroy', account) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Account', new_account_path, :class=>"btn btn-primary btn-sm" %>

</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
