<h1>Listing accounts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Is disabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.description %></td>
        <td><%= account.amount %></td>
        <td><%= account.currency %></td>
        <td><%= account.is_disabled %></td>
        <td><%= draw_button('show',  account) %></td>
        <td><%= draw_button('edit',  edit_account_path(account)) %></td>
        <td><%= draw_button('destroy',  account) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, :class=>"btn btn-success btn-sm" %>
