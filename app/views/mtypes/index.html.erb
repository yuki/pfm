<h1>Listing mtypes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mtypes.each do |mtype| %>
      <tr>
        <td><%= mtype.name %></td>
        <td><%= link_to 'Edit', edit_mtype_path(mtype) %></td>
        <td><%= link_to 'Destroy', mtype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mtype', new_mtype_path, :class=>"btn btn-success btn-sm" %>
