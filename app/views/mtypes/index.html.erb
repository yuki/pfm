<h1>Listing mtypes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mtypes.each do |mtype| %>
      <tr>
        <td><%= mtype.name %></td>
        <td><%= draw_button('show',  mtype) %></td>
        <td><%= draw_button('edit',  edit_mtype_path(mtype)) %></td>
        <td><%= draw_button('destroy',  mtype) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mtype', new_mtype_path, :class=>"btn btn-success btn-sm" %>
