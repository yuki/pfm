<h1>Listing mtypes</h1>
<div class="col-md-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @mtypes.each do |mtype| %>
        <tr>
          <td><%= mtype.name %></td>
          <td><%= draw_button('show', mtype) %>
              <%= draw_button('edit', edit_mtype_path(mtype)) %>
              <%= draw_button('destroy', mtype) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Mtype', new_mtype_path, :class=>"btn btn-primary btn-sm" %>
</div>
